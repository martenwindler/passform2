<?xml version="1.0"?>
<root main_tree_to_execute="MainTree">
    <!-- ////////// -->
    <BehaviorTree ID="MainTree">
        <Decorator ID="RangeLoop" current="idx" start="0" step="1" stop="4">
            <Action ID="PrintInt" message="{idx}"/>
        </Decorator>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Decorator ID="RangeLoop">
            <output_port default="current_iteration" name="current"/>
            <input_port name="start"/>
            <input_port default="1" name="step">The increment at each iteration</input_port>
            <input_port name="stop"/>
        </Decorator>
        <Action ID="PrintInt">
            <input_port name="message"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
